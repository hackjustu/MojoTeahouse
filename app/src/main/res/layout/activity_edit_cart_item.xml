<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.mojoteahouse.mojotea.activity.EditCartItemActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_large_height">

        <com.parse.ParseImageView
            android:id="@+id/order_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_loading" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:background="@drawable/text_gradient_background_reverse"
                app:navigationIcon="@drawable/ic_back">

            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/order_item_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/text_gradient_background"
                android:fontFamily="@string/roboto_medium"
                android:maxLines="3"
                android:paddingBottom="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="16dp"
                android:singleLine="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="gone" />

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/quantity_hint"
                android:textAppearance="@style/TextAppearance.AppCompat.Hint" />

            <ViewSwitcher
                android:id="@+id/quantity_view_switcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Spinner
                    android:id="@+id/quantity_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/quantity_array" />

                <EditText
                    android:id="@+id/quantity_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeActionLabel="@string/action_done"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text="@string/quantity_initial_value" />

            </ViewSwitcher>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/toppings_hint"
                android:textAppearance="@style/TextAppearance.AppCompat.Hint" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/toppings_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="54dp"
                    android:layout_marginTop="12dp"
                    android:scrollbars="none"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/no_topping_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/no_topping_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <Button
            android:id="@+id/edit_done_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/button_state"
            android:textAppearance="@style/TextAppearance.AppCompat.Button.Normal" />

    </FrameLayout>

</LinearLayout>
