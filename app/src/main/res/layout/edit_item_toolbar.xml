<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_large_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.parse.ParseImageView
        android:id="@+id/mojo_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_loading" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:navigationIcon="@drawable/ic_back"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@drawable/text_gradient_background_reverse" />

        <TextView
            android:id="@+id/mojo_item_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/text_gradient_background"
            android:fontFamily="@string/roboto_medium"
            android:maxLines="3"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="16dp"
            android:singleLine="false"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="gone" />

    </RelativeLayout>

</FrameLayout>